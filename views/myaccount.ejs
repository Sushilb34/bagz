<% include('./partials/header') %>

<div class="flex min-h-screen bg-gray-100">
  <div class="flex flex-col justify-center items-center w-full px-4 md:w-1/2 mx-auto">
    <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">My Account</h1>

    <div class="bg-white rounded-lg shadow-md px-10 py-8 max-w-md overflow-hidden">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6 border-b border-gray-200 pb-2">Profile Information</h2>

      <ul class="space-y-4">
        <li class="flex items-center">
          <span class="text-gray-700 font-medium mr-4">Full Name:</span>
          <span class="text-gray-900 font-semibold"><%= user.fullname %></span>
        </li>

        <li class="flex items-center">
          <span class="text-gray-700 font-medium mr-4">Email:</span>
          <span class="text-gray-900 font-semibold"><%= user.email %></span>
        </li>
      </ul>

      <div class="mt-8 text-center">
        <a href="/user/update-profile" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          Update Profile
        </a>
      </div>
    </div>
  </div>
</div>

<% include('./partials/footer') %>